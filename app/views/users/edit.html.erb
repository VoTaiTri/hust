<% provide :title, "Edit admin" %>
<h1>Cập nhật thông tin tài khoản</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
  </div>
  <div class="col-md-3">
    <label>Hình ảnh đại diện hiện tại</label>
    <% if @user.avatar.to_s == "/uploads/user/avatar/#{@user.id}/default_user.png" %>
      <%= image_tag "default_user.png", size:"128x128", alt: "Current Cover", class: "img-polaroid" %>
    <% else %>
      <%= image_tag @user.avatar, size:"128x128", alt: "Current Cover", class: "img-polaroid" %>
    <% end %>
  </div>
</div>