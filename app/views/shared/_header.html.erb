<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to_if(logged_in_admin?, "Admin DATN", admin_root_path, id: "logo"){} %>
    <%= link_to_if(logged_in_user?, "DATN", root_path, id: "logo"){} %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in_admin? %>
          <li><%= link_to "Home", admin_root_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Users <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "List users", "#" %></li>
              <li><%= link_to "Add new user", "#" %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", admin_user_path(current_user) %></li>
              <li><%= link_to "Settings", edit_admin_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% elsif logged_in_user? %>
          <li><%= link_to "Home", root_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>